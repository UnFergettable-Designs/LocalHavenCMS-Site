---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/global.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  :root {
    /* Typography */
    --font-family-base: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
      Ubuntu, Cantarell, sans-serif;
    --font-family-mono: ui-monospace, 'SF Mono', Menlo, Monaco, 'Cascadia Mono', 'Segoe UI Mono',
      monospace;
    --font-size-base: 16px;
    --line-height-base: 1.5;

    /* Colors */
    --color-primary: #047857;
    --color-primary-dark: #065f46;
    --color-secondary: #3b82f6;

    /* Text Colors */
    --color-text-primary: #111827;
    --color-text-secondary: #374151;
    --color-text-tertiary: #4b5563;
    --color-text-light: #6b7280;

    /* Background Colors */
    --color-background: #ffffff;
    --color-background-alt: #f3f4f6;
    --color-background-dark: #111827;

    /* Border Colors */
    --color-border: #d1d5db;

    /* Status Colors */
    --color-error: #dc2626;
    --color-error-light: #fee2e2;
    --color-success: #059669;

    /* Chart Colors */
    --color-chart-1: #059669;
    --color-chart-2: #0891b2;
    --color-chart-3: #6366f1;
    --color-chart-4: #8b5cf6;
    --color-chart-5: #ec4899;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
