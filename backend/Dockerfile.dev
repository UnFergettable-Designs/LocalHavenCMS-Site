FROM golang:1.23-bookworm as development

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    sqlite3 \
    libsqlite3-dev \
    && rm -rf /var/lib/apt/lists/*

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o main .

# Create data directory with proper permissions (Debian)
RUN mkdir -p /app/data && \
    useradd -m -u 1000 appuser && \
    chown -R appuser:appuser /app && \
    chmod -R 755 /app && \
    chmod -R 777 /app/data

USER appuser

EXPOSE 8090

# Use shell form to ensure directory exists and has proper permissions
CMD sh -c "mkdir -p /app/data && chmod 777 /app/data && ./main"
